{
    "configurations": [
        {
            "name": "Linux",
            "compilerPath": "/usr/bin/clang++",
            "cStandard": "c17",
            "cppStandard": "c++20",
            "includePath": [
                "${workspaceFolder}/**",
                "/usr/include",                   // standard headers
                "/usr/include/llvm"              // LLVM headers
                // "/usr/local/include/my_lib"       // external library
            ],
            "defines": [],
            "browse": {
                "path": [
                    "/usr/include",
                    "/usr/include/llvm"
                    // "/usr/local/include/my_lib"
                ],
                "limitSymbolsToIncludedHeaders": true
            }
        }
    ],
    "version": 4
}
